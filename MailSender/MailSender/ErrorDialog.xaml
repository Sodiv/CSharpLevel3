<Window x:Class="MailSender.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        mc:Ignorable="d"
        Title="ErrorDialog" Height="282.203" Width="560.699">
    <Grid>
        <TextBlock x:Name="tb_Error" HorizontalAlignment="Center" Foreground="Red" Margin="10" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="150" Width="360"/>
        <Button x:Name="btn_Ok" Click="OkButton_OnClick" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Content="Ok" Width="100" Height="30"/>

    </Grid>
</Window>
